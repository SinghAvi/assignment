<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name, value: form.object.first_name %>
  </div>

  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name, value: form.object.last_name %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email, value: form.object.email %>
  </div>

  <div>
    <%= form.label :roles, "Roles *" %>
    <%= form.select :role_ids, Role.all.collect {|p| [p.title, p.id] }, {include_blank: 'None'}%>
  </div>

  <div>
    <%= form.label :Image %>
    <%= form.file_field :avatar, direct_upload: true, value: form.object.avatar %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
